
set background=dark
set cinkeys=0{,0},0),0#,!<Tab>,;,:,o,O,e
set expandtab
set indentkeys=!<Tab>,o,O
set laststatus=2
set number
set paste
set shiftwidth=4
set smartindent
set statusline=%t\ %{&ff}%h%m%r%y%=%c,%l/%L\ %P
set tabstop=4

map <Tab> i<Tab><Esc>^

filetype indent on
set cinoptions={1s,>2s,e-1s,^-1s,n-1s,:1s,p5,i4,(0,u0,W1s shiftwidth=2
syntax on
